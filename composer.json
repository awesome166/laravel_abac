{
  "name": "awesome166/laravel-abac",
  "description": "SaaS multi-tenancy and ABAC access control system with Zeus capabilities",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "awesome166",
      "email": "joeymantey@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/support": "^10.0|^11.0",
    "illuminate/database": "^10.0|^11.0",
    "illuminate/auth": "^10.0|^11.0"
  },
  "require-dev": {
    "orchestra/testbench": "^8.0|^9.0",
    "pestphp/pest": "^2.0|^3.0",
    "pestphp/pest-plugin-laravel": "^2.0|^3.0",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "Awesome\\Abac\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Awesome\\Abac\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Awesome\\Abac\\AwesomeAbacServiceProvider"
      ],
      "aliases": {
        "Abac": "Awesome\\Abac\\Facades\\Abac"
      }
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}